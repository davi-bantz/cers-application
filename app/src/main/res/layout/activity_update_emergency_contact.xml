<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/userprof2"
    tools:context=".UpdateInfoCitizen.update_emergencyContact">

    <TextView
        android:id="@+id/Edit_Basic_Details"
        android:layout_width="241dp"
        android:layout_height="24dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/archivo_black"
        android:text="Update Emergency Contact"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toEndOf="@+id/imageButtonforbacktoEc"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonforbacktoEc"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#14F467"
        android:contentDescription="UserProfilenavigate"
        android:scrollbarThumbHorizontal="@null"
        android:scrollbarThumbVertical="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_backtosettings" />

    <TextView
        android:id="@+id/Update_Details"
        android:layout_width="331dp"
        android:layout_height="121dp"
        android:alpha="10.5"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Emergency Contact"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_Basic_Details"
        app:layout_constraintVertical_bias="0.016" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Edit_Emergency_Name"
        app:layout_constraintEnd_toEndOf="@+id/Edit_Emergency_Name"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="@+id/Edit_Emergency_Name" />

    <EditText
        android:id="@+id/Edit_Emergency_Name"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bubble"
        android:hint="Enter your name"
        android:padding="10dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:backgroundTint="#9BFF8E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Update_Details" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Edit_Emergency_Phone"
        app:layout_constraintEnd_toEndOf="@+id/Edit_Emergency_Phone"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="@+id/Edit_Emergency_Phone" />

    <EditText
        android:id="@+id/Edit_Emergency_Phone"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bubble"
        android:hint="Enter your Phone Number"
        android:padding="10dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:backgroundTint="#9BFF8E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_Emergency_Name" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purok"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Edit_Emergency_Purok"
        app:layout_constraintEnd_toEndOf="@+id/Edit_Emergency_Purok"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="@+id/Edit_Emergency_Purok" />

    <EditText
        android:id="@+id/Edit_Emergency_Purok"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bubble"
        android:hint="Enter your Purok"
        android:padding="10dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:backgroundTint="#9BFF8E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_Emergency_Phone" />


    <TextView
        android:id="@+id/textView11"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:text="Street"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Edit_Emergency_Street"
        app:layout_constraintEnd_toEndOf="@+id/Edit_Emergency_Street"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/Edit_Emergency_Street" />

    <EditText
        android:id="@+id/Edit_Emergency_Street"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bubble"
        android:hint="Enter your Street"
        android:padding="10dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:backgroundTint="#9BFF8E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_Emergency_Purok" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="67dp"
        android:layout_height="24dp"
        android:text="Barangay"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Edit_Emergency_Barangay"
        app:layout_constraintEnd_toEndOf="@+id/Edit_Emergency_Barangay"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="@+id/Edit_Emergency_Barangay" />

    <EditText
        android:id="@+id/Edit_Emergency_Barangay"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bubble"
        android:hint="Enter your Barangay"
        android:padding="10dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:backgroundTint="#9BFF8E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_Emergency_Street" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="32dp"
        android:layout_height="22dp"
        android:text="City"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Edit_Emergency_City"
        app:layout_constraintEnd_toEndOf="@+id/Edit_Emergency_City"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="@+id/Edit_Emergency_City" />

    <EditText
        android:id="@+id/Edit_Emergency_City"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bubble"
        android:hint="Enter your City/Municipality"
        android:padding="10dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:backgroundTint="#9BFF8E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_Emergency_Barangay" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="66dp"
        android:layout_height="20dp"
        android:text="Province"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Edit_Emergency_Province"
        app:layout_constraintEnd_toEndOf="@+id/Edit_Emergency_Province"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="@+id/Edit_Emergency_Province" />

    <EditText
        android:id="@+id/Edit_Emergency_Province"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bubble"
        android:hint="Enter your Province"
        android:padding="10dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:backgroundTint="#9BFF8E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_Emergency_City" />


    <Button
        android:id="@+id/Update_ECDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/bubble"
        android:text="Update Emergency Contact"
        app:backgroundTint="@android:color/holo_green_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_Emergency_Province" />

    <ProgressBar
        android:id="@+id/progressBar_UpdateEC"
        style="?android:attr/progressBarStyle"
        android:layout_width="109dp"
        android:layout_height="115dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10dp"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>