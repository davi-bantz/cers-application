<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/userprof2"
    tools:context=".citizenProfile.UploadProfilePicture">


    <TextView
        android:id="@+id/Text_View_Upload_Photo"
        android:layout_width="327dp"
        android:layout_height="89dp"
        android:background="@drawable/emergency_contact"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Upload your Profile Photo"
        android:textAlignment="center"
        android:textSize="30sp"
        app:backgroundTint="#9BFF8E"
        app:layout_constraintBottom_toTopOf="@+id/button_choose_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.626" />

    <Button
        android:id="@+id/button_choose_photo"
        android:layout_width="168dp"
        android:layout_height="59dp"
        android:layout_marginBottom="612dp"
        android:background="@drawable/emergencybubble"
        android:text="Choose Image"
        app:backgroundTint="#14F467"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView_Photo"
        android:layout_width="344dp"
        android:layout_height="404dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/emergency_contact"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_choose_photo"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_upload_photo"
        android:layout_width="168dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/emergencybubble"
        android:text="Upload Image"
        app:backgroundTint="@android:color/holo_green_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_Photo"
        app:layout_constraintVertical_bias="0.294" />

    <ProgressBar
        android:id="@+id/progressBarUploadProfilePhoto"
        style="?android:attr/progressBarStyle"
        android:layout_width="109dp"
        android:layout_height="115dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10dp"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>